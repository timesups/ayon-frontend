{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client"],
    "baseUrl": "src",
    "paths": {
      "@containers/*": ["./containers/*"],
      "@hooks/*": ["./hooks/*"],
      "@components/*": ["./components/*"],
      "@api/*": ["./api/*"],
      "@api": ["./api"],
      "@types": ["./types"],
      "@queries/*": ["./services/*"],
      "@pages/*": ["./pages/*"],
      "@context/*": ["./context/*"],
      "@state/*": ["./features/*"],
      "@helpers/*": ["./helpers/*"],
      "@shared/*": ["../shared/src/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
